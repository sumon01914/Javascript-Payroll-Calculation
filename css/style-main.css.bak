}
.calculator input[type="text"] {
  width: 100%;
  height: 50px;
  margin-bottom: 10px;
  text-align: right;
  padding: 10px;
  font-size: 18px;
  border: 2px solid #ccc;   /* Normal border */
  border-radius: 5px;
  outline: none;            /* Removes blue glow */
  box-shadow: none;         /* Removes inner shadow */
}

/* When focused, add a subtle effect */
.calculator input[type="text"]:focus {
  border-color: #007bff;    /* Light blue border */
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5); /* Soft glow */
}
    .calculator {
      background: #fff;
      padding: 10px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
      max-width: 600px;
      margin: auto;
    }
    #display {
      width: 100%;
      height: 30px;
      font-size: 18px;
      text-align: left;
      margin-bottom: 10px;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 8px;
    }
    .buttons button {
      padding: 10px;
      font-size: 14px;
      border: none;
      border-radius: 4px;
      background: #eaeaea;
      cursor: pointer;
    }
    .buttons button:hover {
      background: #d4d4d4;
    }
    .buttons button.operator {
      background: #007BFF;
      color: #fff;
    }
    .buttons button.operator:hover {
      background: #0056b3;
    }
    .row {
      margin-top: 12px;
      text-align: right;
    }
    .add-formula {
      padding: 8px 16px;
      background: #28a745;
      border: none;
      border-radius: 4px;
      color: #fff;
      font-size: 14px;
      cursor: pointer;
    }
    .add-formula:hover {
      background: #1e7e34;
    }


